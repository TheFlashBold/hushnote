<textarea class="form-control" id="note" rows="14"></textarea> <br /> <div>
  <input type="checkbox" id="exp_check" onclick="toggleTTL()">Enable time-base note destruction</input>
  <span id="time_input" style="display: none;">Minutes: <input type="text" id="exp_time" value="60" /><br/></span>
</div>
<button class="btn btn-primary form-control" onclick="submit()">Submit</button>
<button class="btn btn-default form-control" style="margin-top:8px;" onclick="restart()">Clear</button>

<div id="results" style="font-size: 40px;margin-top:10px;text-align:center;display:none;">
  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1">URL:</span>
    <input type="text" class="form-control" id="url" />
    <span onclick="copyUrl()" id="copy" class="input-group-addon" style="cursor:pointer;">Copy</span>
  </div>
</div>


<script>
  function submit() {
    const note = document.getElementById('note').value;
    let ttl = 0;
    if (document.getElementById('exp_check').checked) {
      ttl = document.getElementById('exp_time').value;
    }
    const opts = { note: note, ttl: ttl};
    fetch('/create', {
      method: 'post',
      body: JSON.stringify(opts),
      headers: new Headers({
        'Content-Type': 'application/json'
      })
    }).then(function(response) {
      return response.json();
    }).then(function(data) {
      document.getElementById('url').value = data.url;
      document.getElementById('results').style.display = 'block';
    });
  }
  
  function copyUrl() {
    document.getElementById('url').select();
    document.execCommand('copy');
    document.getElementById('copy').innerHTML = 'Copied!';
  }

  function restart() {
    document.getElementById('note').value = '';
    document.getElementById('url').value = '';
    document.getElementById('results').style.display = 'none';
    document.getElementById('time_input').style.display = 'none';
  }

  function toggleTTL() {
    if (document.getElementById('exp_check').checked) {
      document.getElementById('time_input').style.display = 'inline';
    } else {
      document.getElementById('time_input').style.display = 'none';
    }
  }

</script>
